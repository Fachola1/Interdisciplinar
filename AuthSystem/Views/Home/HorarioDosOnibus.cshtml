@model List<AuthSystem.Models.HorarioOnibusModel>
@{
    ViewData["Title"] = "Horários de Ônibus";
}

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
    .container {
        margin-top: 20px;
        background: #FFFFFF;
    }

    .card {
        box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
    }

    .avatar.sm {
        width: 2.25rem;
        height: 2.25rem;
        font-size: .818125rem;
    }

    .table-nowrap .table td,
    .table-nowrap .table th {
        white-space: nowrap;
    }

    .table > :not(caption) > * > * {
        padding: 0.75rem 1.25rem;
        border-bottom-width: 1px;
    }

    table th {
        font-weight: 600;
        background-color: #6c63ff !important; /* Cor roxa */
        color: #fff; /* Cor do texto */
    }

    .fa-arrow-up {
        color: #00CED1;
    }

    .fa-arrow-down {
        color: #FF00FF;
    }

    .btn-custom {
        background-color: #6C63FF;
        border-color: #6C63FF;
        color: white;
    }
</style>

<div class="container">
    <h2>Horários de Ônibus</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Número da Plataforma</th>
                <th>Nome</th>
                <th>Horario de Saida</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var onibus in Model)
            {
                <tr>
                    <td># @onibus.Id</td>
                    <td>@onibus.Nome</td>
                    <td>@onibus.HorarioSaida</td>
                </tr>
            }
        </tbody>
    </table>
    <button type="button" class="btn btn-custom" data-toggle="modal" data-target="#horariosModal">Ver Todos os Horários</button>
</div>

<!-- Modal -->
<div class="modal fade" id="horariosModal" tabindex="-1" role="dialog" aria-labelledby="horariosModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="horariosModalLabel">Todos os Horários</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="small text-uppercase bg-body text-muted">
                            <tr>
                                <th>Número da Plataforma</th>
                                <th>Nome</th>
                                <th>Horario de Saida</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var onibus in Model)
                            {
                                <tr>
                                    <td># @onibus.Id</td>
                                    <td>@onibus.Nome</td>
                                    <td>@onibus.HorarioSaida</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-custom" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
