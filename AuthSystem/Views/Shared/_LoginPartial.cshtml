@using Microsoft.AspNetCore.Identity
@using AuthSystem.Areas.Identity.Data

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="font-weight: bold;">
                Olá, <span style="color: #6c63ff;">@UserManager.GetUserAsync(User).Result.FirstName!</span>
            </a>
        </li>
        <li class="nav-item" style="margin-left: 15px;">
            <!-- Adicionando margem à esquerda -->
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">
                    <img src="https://i.postimg.cc/W30ZK1Y5/logout-157938.png" alt="Logout" style="height: 20px; width: 20px;">
                </button>
            </form>
        </li>
    }
</ul>
